<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Barroom</h1>
        
        <div style="width:30%; margin: 30px auto;">
        <form action="/barroom" method="POST">
            
            <!--gives some auto spacing from the bootstrap class form-group-->
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name"> 
            </div>
            
            <div class="form-group">
                <!--storing as string saves formatting-->
                <input class="form-control" type="number" name="n" placeholder="name"> 
            </div>
            
            <div class="form-group">
                <input class="form-control"type="text" name="img" placeholder="img url">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Enter Description">
            </div>
          
            <div class="form-group"> 
                <button class="btn btn-lg btn-success btn-block">Submit</button>
            </div>
            
            <a href="/barroom">Back to the BarRoom</a>
        </form>
        </div>
        
        
    </div>


</div>

<% include ../partials/footer %>